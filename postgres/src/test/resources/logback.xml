<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%cyan(%d{HH:mm:ss.SSS}) [%cn] %highlight(%-5level) %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="STDOUT"/>
    </appender>

    <root level="INFO">
        <appender-ref ref="ASYNC"/>
    </root>

    <logger level="INFO" name="org.testcontainers"/>
    <logger level="WARN" name="org.testcontainers.containers"/>
    <logger level="WARN" name="org.testcontainers.containers.PostgreSQLContainer"/>
    <logger level="TRACE" name="io.goodforgod.testcontainers.extensions"/>
</configuration>
